---
extends: 'default'

ignore: |-
  /custom_components/
  /themes/
  /www/community/

  # Encrypted files.
  /esphome/secrets.yaml
  /secrets.yaml
  /zigbee2mqtt/secret.yaml

rules:
  braces:
    forbid: 'non-empty'
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  brackets:
    forbid: 'non-empty'
  comments:
    level: 'error'
  comments-indentation:
    level: 'error'
  document-end:
    present: false
  document-start:
    level: 'error'
    ignore: '/zigbee2mqtt/'
  empty-lines:
    max: 1
  empty-values: 'enable'
  indentation:
    spaces: 2
  line-length: 'disable'
  octal-values: 'enable'
  quoted-strings:
    quote-type: 'single'
    ignore: '/zigbee2mqtt/'
  truthy:
    check-keys: false
    level: 'error'
