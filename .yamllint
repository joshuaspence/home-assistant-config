---
extends: 'default'

ignore: |-
  /custom_components/
  /secrets.yaml
  /www/community/

rules:
  braces:
    max-spaces-inside: 1
    max-spaces-inside-empty: 0
    min-spaces-inside: 1
    min-spaces-inside-empty: 0
  comments:
    level: 'error'
  comments-indentation:
    level: 'error'
  document-end:
    present: false
  document-start:
    level: 'error'
  empty-lines:
    max: 1
  empty-values: 'enable'
  indentation:
    check-multi-line-strings: true
    spaces: 2
  key-ordering:
    # TODO: Maybe remove this?
    ignore: |-
      # Keys are sorted based on the order they appear in documentation
      # rather than alphabetically.
      #
      # See also https://github.com/adrienverge/yamllint/issues/178.
      /.github/dependabot.yaml
      /.github/workflows/*.yaml
      /lovelace/views/*.yaml
      /scenes.yaml
      /ui-lovelace.yaml
  line-length: 'disable'
  octal-values: 'enable'
  quoted-strings:
    quote-type: 'single'
  truthy:
    check-keys: false
    level: 'error'
